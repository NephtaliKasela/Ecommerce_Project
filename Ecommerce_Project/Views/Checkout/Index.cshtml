                            <label>E-mail</label>
                            <input class="form-control" type="text" placeholder="example@email.com" name="Email" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Mobile No</label>
                            <input class="form-control" type="text" placeholder="+123 456 789" name="PhoneNumber" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 1</label>
                            <input class="form-control" type="text" placeholder="123 Street" name="AddressLine1" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Address Line 2</label>
                            <input class="form-control" type="text" placeholder="123 Street" name="AddressLine2">
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Country</label>
                            <select class="custom-select" name="CountryId" required>
                                @{
                                    foreach (var country in Model.Countries)
                                    {
                                        <option value="@country.Id">@country.Name</option>
                                    }
                                }
