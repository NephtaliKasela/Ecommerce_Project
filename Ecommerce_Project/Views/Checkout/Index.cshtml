            <div class="col-lg-4">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Order</h4>
                    </div>
                    <div class="card-body">
                        
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            @{
                                decimal productPrice = 0;

                                @if (Model.Cart.Product.SoldPrice > 0) productPrice = Model.Cart.Product.SoldPrice;
                                else productPrice = Model.Cart.Product.Price;
                            }
                            <h5 class="mr-3">$@productPrice</h5>
                            <div class="p-2 border-secondary" style="border: 1px solid; border-radius: 5px 5px 5px 5px;">
                                @{
                                    if (Model.Cart.Product.ProductImages.Count > 0)
                                    {
                                        var image = Model.Cart.Product.ProductImages[0];
                                        <img src="data:@image.ContentType;base64,@System.Convert.ToBase64String(image.ImageData)" class="img-fluid" style="height: auto; max-height: 70px; border-radius: 5px 5px 5px 5px;" alt="@Model.Cart.Product.Name">

                                    }
                                    else
                                    {
                                        <img src="~/007-eshopper-1.0.0/img/b9f2193028967077ad84b60a2cced514-removebg-preview.png" class="img-fluid" style="height: auto; max-height: 70px; border-radius: 5px 5px 5px 5px;" alt="Product Image">

                                    }
                                }
                            </div>
                            
                        </div>
                        <div class="d-flex justify-content-between">
                            <p>@Model.Cart.Product.Name</p>
                            <p>(x @Model.Cart.Quantity)</p>
                        </div>

                        <hr class="mt-0">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            @{
                                decimal subtotal = 0;
                                if (Model.Cart.Product.SoldPrice > 0) subtotal += Model.Cart.Product.SoldPrice * Model.Cart.Quantity;
                                else subtotal = Model.Cart.Product.Price * Model.Cart.Quantity;
                            }
                            <h6 class="font-weight-medium">$@subtotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping (5%)</h6>
                            @{
                                decimal shipping = (subtotal * 5) / 100;
                            }
                            <h6 class="font-weight-medium">$@shipping</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            @{
                                decimal total = subtotal + shipping;
                            }
                            <h5 class="font-weight-bold">$@total</h5>
                        </div>
                    </div>
                </div>
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Payment</h4>
                    </div>
                    <div class="card-body">
                        <select class="custom-select" name="paymentModeId">
                            @{
