@model List<Ecommerce_Project.DTOs.Order.GetOrderDTO>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //Layout = "~/Views/Shared/adminLayout.cshtml";
}


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-2 col-sm-12">
            <ul class="nav flex-column nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="User" asp-action="Profile">Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Seller" asp-action="GetOrders">Orders</a>
                </li>
            </ul>
        </div>
        <div class="col-md-10 col-sm-12">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="product" role="tabpanel" aria-labelledby="content-tab">
                    <!-- Normal Table area Start-->
                    <div class="normal-table-area">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="normal-table-list">
                                        <div class="basic-tb-hd">
                                            <h4>Orders</h4>
                                        </div>
                                        <div class="bsc-tbl table-responsive">
                                            <table class="table table-sc-ex">
                                                <thead>
                                                    <tr>
                                                        <th>No</th>
                                                        <th>Product</th>
                                                        <th>OrderId</th>
                                                        <th class="text-center">Quantity</th>
                                                        <th>Total</th>
                                                        <th>Payment Mode</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        int count = 0;
                                                        for (int i = Model.Count - 1; i >= 0; i--)
                                                        {
                                                            var order = Model[i];
                                                            count++;
                                                            <tr>
                                                                <td>@count</td>
                                                                @{
                                                                    if (order.Product.ProductImages.Count > 0)
                                                                    {
                                                                        var image = order.Product.ProductImages[0];
                                                                        <td>
                                                                            <div class="" style="display: flex; align-items: center;">

                                                                                <img src="data:@image.ContentType;base64,@System.Convert.ToBase64String(image.ImageData)" class="img-fluid" style="max-width: 70px; margin-right: 10px;" alt="@order.Product.Name">

                                                                                <div>
                                                                                    @order.Product.Name
                                                                                </div>
                                                                            </div>
                                                                        </td>

                                                                    }
                                                                    else
                                                                    {
                                                                        <td>@order.Product.Name</td>
                                                                    }
                                                                }
                                                                <td><mark> @order.OrderID </mark></td>
                                                                <td class="text-center">@order.Quantity</td>
                                                                <td>$@order.Total</td>
                                                                <td>@order.PaymentMode.Name</td>
                                                                <td>
                                                                    <div class="btn-demo-notika mg-t-30">
                                                                        <div class="button-icon-btn mg-t-30 butt-mg-t-20">
                                                                            <button class="btn btn-default btn-icon-notika dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"><i class="notika-icon notika-menu"></i></button>
                                                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                                                <li><a class="dropdown-item" asp-controller="Seller" asp-action="OrderDetails" asp-route-id="@order.Id"><i class="fa fa-eye text-primary"></i> View</a></li>
                                                                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="UpdateProduct" asp-route-id="@order.Id">Update</a></li>
                                                                                <li><a class="dropdown-item" href="#">Delete</a></li>
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


