@model Ecommerce_Project.DTOs.Order.GetOrderDTO

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //Layout = "~/Views/Shared/adminLayout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-2 col-sm-12">
            <ul class="nav flex-column nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Dashboard">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Seller" asp-action="GetOrders">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="SellerProducts">Products</a>
                </li>
            </ul>
        </div>
        <div class="col-md-10 col-sm-12">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="dashboard" role="tabpanel" aria-labelledby="categories-tab">
                    <h7>Orders / Order details</h7>

                    <div class="row">
                        <div class="col-lg-9 mb-4">
                            <div class="card box-shadow-primary" style="background-color: #fff; padding: 1rem; margin: 1rem 0; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="d-flex align-items-lg-center pb-3">
                                                <h5 class="p-0 m-0 mr-2">ID: @Model.OrderID</h5>
                                                <p class="text-success border p-0 m-0 px-2 py-1 mr-2" style="background-color:aquamarine;">Paid</p>
                                                <p class="text-warning border border-warning p-0 m-0 px-2 py-1" style="border-radius: 10px;">In Progress</p>
                                            </div>
                                            <p style="font-size: 15px;">Oders / Order details / @Model.OrderID at @DateTime.Now.ToLongDateString()</p>
                                        </div>
                                        
                                        <div>
                                        </div>
                                    </div>
                                    <div>
                                        <h6 class="font-weight-semi-bold py-3">Progress</h6>
                                        <div class="row">
                                            <div class="col-lg-3">
                                                <div class="progress mb-2" style="height: 10px;">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <p style="font-size: 15px;">Order Confirming</p>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="progress mb-2" style="height: 10px;">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <p style="font-size: 15px;">Payment Pending</p>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="progress mb-2" style="height: 10px;">
                                                    <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <p style="font-size: 15px;">
                                                    Processing <span class="spinner-border text-warning" role="status" style="width: 1rem; height: 1rem;"></span>
                                                </p>
                                                
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="progress mb-2" style="height: 10px;">
                                                    <div class="progress-bar progress-bar-stripedprogress-bar-animated bg-success" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                                <p style="font-size: 15px;">Delivered</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 mb-4">
                            <div class="card" style="background-color: #fff; padding: 1rem; margin: 1rem 0; border-radius: 5px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
                                <div class="card-body">
                                    <h5 class="card-title">Total Sellers</h5>
                                    <p class="card-text">50</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
