    <!-- Cart Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
            @{
                foreach (var cart in Model)
                {
                    <div class="mb-4">
                        <div class="card position-relative" style="border: none; border-radius: 5px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="p-2">
                                        @{
                                            if (cart.Product.ProductImages.Count > 0)
                                            {
                                                var image = cart.Product.ProductImages[0];
                                                <img src="data:@image.ContentType;base64,@System.Convert.ToBase64String(image.ImageData)" class="img-fluid" style="border-radius: 5px 0 0 5px; height: auto; " alt="@cart.Product.Name">

                                            }
                                            else
                                            {
                                                <img src="~/007-eshopper-1.0.0/img/b9f2193028967077ad84b60a2cced514-removebg-preview.png" class="img-fluid" style="border-radius: 5px 0 0 5px; height: auto;" alt="Product Image">
                                            }
                                        }
                                    </div>
                                </div>
                                <div class="col-lg-8">
                                    <div class="card-body" style="padding: 1.25rem;">
                                        <h5 class="card-title">@cart.Product.Name</h5>
                                        @if (cart.Product.SoldPrice > 0)
                                        {
                                            <p class="card-text">$@cart.Product.SoldPrice</p>
                                        }
                                        else
                                        {
                                            <p class="card-text">$@cart.Product.Price</p>
                                        }
                                        
                                            <form asp-controller="Cart" asp-action="UpdateCart">
                                            <div class="d-flex align-items-center mb-4">
                                                <p class="mb-0 mr-3">Quantity:</p>
                                                <div class="input-group quantity mr-3" style="width: 130px;">
                                                    <input type="hidden" class="form-control bg-transparent border-0 text-center text-primary" name="Id" value="@cart.Id" required>
                                                    <input type="number" class="form-control bg-transparent border-0 text-center text-primary" name="Quantity" min="@cart.Product.MinimumOrder" max="@cart.Product.StockQuantity" value="@cart.Quantity" required>
                                                   
                                                </div>
                                            </div>
                                            <div style="display: flex;">
                                                <button class="btn btn-secondary mr-3" style="border: none;">Save</button>
                                                <a asp-controller="Checkout" asp-action="Index" asp-route-cartId="@cart.Id" class="btn btn-primary bg-primary" style="border: none;">Proceed to checkout</a>
                                            </div>
                                            </form>
                                            
                                        
                                        
                                    </div>
                                </div>
                            </div>
                            <a asp-controller="Cart" asp-action="CancellCart" asp-route-id="@cart.Id" class="position-absolute top-1 start-100 translate-middle badge rounded-pill bg-danger">
                                <span class="">
                                    ×
                                </span>
                            </a>
                            
                        </div>
                    </div>
                }
            }
            </div>
            <div class="col-lg-4">
                <form asp-controller="Checkout" asp-action="Index">
                <div class="card border-secondary mb-5">
                    <div class="card-header bg-secondary border-0">
                        <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            @{
                                decimal subtotal = 0;
                                foreach (var cart in Model)
                                {
                                    if(cart.Product.SoldPrice > 0)
                                    {
                                        subtotal += cart.Product.SoldPrice * cart.Quantity;
                                    }
                                    else
                                    {
                                        subtotal += cart.Product.Price * cart.Quantity;
                                    }
                                }
                            }
                            <h6 class="font-weight-medium">$@subtotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping (5%)</h6>
                            @{
                                decimal shipping = (subtotal * 5) / 100;
                            }
                            <h6 class="font-weight-medium">$@shipping</h6>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            @{
                                decimal total = subtotal + shipping;
                            }
                            <h5 class="font-weight-bold">$@total</h5>
                        </div>
                    </div>
                </div>
                </form>
                
            </div>
        </div>
    </div>
    <!-- Cart End -->
