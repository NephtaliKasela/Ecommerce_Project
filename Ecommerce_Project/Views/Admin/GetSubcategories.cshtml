@model List<Ecommerce_Project.DTOs.Subcategory.GetSubcategoryDTO>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    //Layout = "~/Views/Shared/adminLayout.cshtml";
}


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md-2 col-sm-12">
            <ul class="nav flex-column nav-pills">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="GetCategories">Categories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Admin" asp-action="GetSubcategories">Subcategories</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="content-tab" data-bs-toggle="pill" href="#order" role="tab" aria-controls="content" aria-selected="false">Orders</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Admin" asp-action="Products">Products</a>
                </li>
            </ul>
        </div>
        <div class="col-md-10 col-sm-12">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="category" role="tabpanel" aria-labelledby="content-tab">
                    <!-- Normal Table area Start-->
                    <div class="normal-table-area">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <div class="normal-table-list">
                                        <div class="basic-tb-hd">
                                            <h4>Subcategories</h4>
                                        </div>
                                        <div class="bsc-tbl table-responsive">
                                            <table class="table table-sc-ex">
                                                <thead>
                                                    <tr>
                                                        <th>Id</th>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Category</th>
                                                        <th style="text-align:center;">Products</th>
                                                        <th>Actions</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @{
                                                        foreach (var subcategory in Model)
                                                        {
                                                            <tr>
                                                                <td>@subcategory.Id</td>
                                                                <td>@subcategory.Name</td>
                                                                <td>@subcategory.Description</td>
                                                                <td>@subcategory.Category.Name</td>
                                                                <td style="text-align:center;">@subcategory.Products.Count</td>
                                                                <td>
                                                                    <div class="btn-demo-notika mg-t-30">
                                                                        <div class="button-icon-btn mg-t-30 butt-mg-t-20">
                                                                            <button class="btn btn-default btn-icon-notika dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false"><i class="notika-icon notika-menu"></i></button>
                                                                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                                                                <li><a class="dropdown-item" href="#">View</a></li>
                                                                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="UpdateProduct" asp-route-id="@subcategory.Id">Update</a></li>
                                                                                <li><a class="dropdown-item" href="#">Delete</a></li>
                                                                            </ul>
                                                                        </div>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


